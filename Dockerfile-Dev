# Use the official Node.js image
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Environment
ENV NODE_ENV=development
ENV PORT=3001

# Expose API port
EXPOSE 3001

# Run server
CMD ["npm", "run", "dev"]